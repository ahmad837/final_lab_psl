<html lang="en">
  <head>
    {{>header}}
    <script src="./js/login.js"></script>
    <style>
    
    </style>

    <title>Admin Register</title>
  </head>
  <body style="background-image: url(/images/BG.jpg);" >
    {{>topnavbar}}

    <div class="wrapper fadeInDown">
      <div id="formContent">

        {{#if messages.error}}
          <span class="registerSpan">{{messages.error}}</span><br>
        {{/if}}

     
        <h2>User Register</h2>

        <!-- Login Form -->
        <form action="/api/users/register" method="POST">
          <input
            type="name"
            id="email"
            class=" second"
            name="name"
            placeholder="Name"
            value="{{messages.name}}"
          />
          <input
            type="email"
            id="email"
            class="fadeIn second"
            name="email"
            placeholder="Email"
            value="{{messages.email}}"
          />
          <input
            type="tel"
            id="email"
            class="fadeIn second"
            name="ph_number"
            placeholder="Mobile Number"
            value="{{messages.ph_number}}"
          />
          <input
            type="password"
            id="password"
            class="fadeIn third"
            name="password"
            placeholder="Password"
          />
          <input
            type="password"
            id="password"
            class="fadeIn third"
            name="confirm_password"
            placeholder="Confirm Password"
          />
          <button type="submit" class="fadeIn fourth myBtn" value="Register">Register</button>
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
          <a class="underlineHover" href="/">Return to hompage</a>
        </div>
      </div>
    </div>
  </body>
</html>